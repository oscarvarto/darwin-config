# ----------------------------------------------------------------------
# PATH Updates
# ----------------------------------------------------------------------
# Add JDK bin directory to PATH to ensure tools are available
PATH_add "$JAVA_HOME/bin"

# Optional: Display JDK information when entering the directory
echo "Project JDK configuration:"
echo "JAVA_HOME: $JAVA_HOME"
java -version

