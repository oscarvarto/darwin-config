#!/usr/bin/env zsh

# GUI Emacs client wrapper
# Single source of truth: home-manager LaunchAgent daemon.

if ! ALTERNATE_EDITOR=false "$HOME/.nix-profile/bin/emacsclient" -e '(server-running-p)' >/dev/null 2>&1; then
    echo "❌ Emacs daemon not running"
    echo "💡 Start it with: emacs-service-toggle start"
    exit 1
fi

exec "$HOME/.nix-profile/bin/emacsclient" -nc "$@"
