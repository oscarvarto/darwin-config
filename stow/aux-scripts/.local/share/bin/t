#!/usr/bin/env zsh

# Terminal Emacs client wrapper
# Start daemon manually with: emacs --daemon

EMACSCLIENT="/opt/homebrew/bin/emacsclient"

# Ensure Emacs can find ghostty terminfo
if [[ "$TERM" == "xterm-ghostty" ]]; then
    export TERMINFO="$HOME/.terminfo"
fi

# Verify daemon is running without triggering auto-start
if ! ALTERNATE_EDITOR=false "$EMACSCLIENT" -e '(server-running-p)' >/dev/null 2>&1; then
    echo "âŒ Emacs daemon not running"
    echo "ğŸ’¡ Start it with: emacs --daemon"
    exit 1
fi

exec "$EMACSCLIENT" -nw "$@"
