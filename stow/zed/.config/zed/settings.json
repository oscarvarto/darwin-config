// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "base_keymap": "VSCode",
  "ssh_connections": [
    {
      "host": "github.com",
      "projects": []
    }
  ],
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    // "default_model": {
    // "provider": "zed.dev",
    // "model": "claude-sonnet-4"
    // }
    "play_sound_when_agent_done": true
  },
  // "agent_servers": {
  //   "claude": {
  //     "command": "npx",
  //     "args": ["claude-code-acp"]
  //   }
  // },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434"
    }
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "vim_mode": true,
  "ui_font_family": "PragmataPro Liga",
  "ui_font_size": 16,
  "buffer_font_family": "MonoLisaVariable Nerd Font",
  "buffer_font_size": 16,
  "buffer_line_height": "standard",
  "terminal": {
    "font_family": "PragmataPro Liga",
    "font_size": 16,
    "line_height": "standard",
    "shell": {
      "with_arguments": {
        "program": "/Users/oscarvarto/.nix-profile/bin/nu",
        "args": ["--login", "--interactive"]
      }
    }
  },
  "icon_theme": "Catppuccin Latte",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "One Dark"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/clangd",
        "arguments": ["-background-index", "-compile-commands-dir=build"]
      }
    },
    "pyrefly": {
      "binary": {
        "path": "/Users/oscarvarto/.local/bin/pyrefly",
        "arguments": ["lsp"]
      },
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        },
        "pyrefly": {
          "project_includes": ["src/**/*.py", "tests/**/*.py"],
          "project_excludes": ["**/.[!/.]*", "**/*venv/**"],
          "search_path": ["src"],
          "ignore_errors_in_generated_code": true
        }
      }
    },
    "jdtls": {
      "initialization_options": {
        "bundles": [],
        // "workspaceFolders": ["file:///home/snjeza/Project"],
        "settings": {
          "java": {
            "home": "/Library/Java/JavaVirtualMachines/25.0.0.jdk/Contents/Home",
            "errors": {
              "incompleteClasspath": {
                "severity": "warning"
              }
            },
            "configuration": {
              "updateBuildConfiguration": "interactive",
              "maven": {
                "userSettings": null
              }
            },
            "trace": {
              "server": "verbose"
            },
            "import": {
              "gradle": {
                "enabled": true
              },
              "maven": {
                "enabled": true
              },
              "exclusions": [
                "**/node_modules/**",
                "**/.metadata/**",
                "**/archetype-resources/**",
                "**/META-INF/maven/**",
                "/**/test/**"
              ]
            },
            "jdt": {
              "ls": {
                "lombokSupport": {
                  "enabled": true // Set this to true to enable lombok support
                }
              }
            },
            "referencesCodeLens": {
              "enabled": true
            },
            "signatureHelp": {
              "enabled": true
            },
            "implementationsCodeLens": {
              "enabled": true
            },
            "format": {
              "enabled": false
            },
            "saveActions": {
              "format": false,
              "organizeImports": false
            },
            "contentProvider": {
              "preferred": null
            },
            "autobuild": {
              "enabled": true
            },
            "completion": {
              "favoriteStaticMembers": ["org.assertj.core.api.Assertions.*"]
              // "importOrder": ["java", "javax", "com", "org"]
            }
          }
        }
      }
    },
    "nixd": {
      "settings": {
        "diagnostic": {
          "suppress": ["sema-extra-with"]
        }
      }
    },
    "sourcekit-lsp": {
      "binary": {
        "path": "/Users/oscarvarto/.swiftly/bin/sourcekit-lsp",
        "arguments": [
          "--scratch-path=/Users/oscarvarto/Library/Caches/sourcekit-lsp/scratch",
          "--generated-files-path=/Users/oscarvarto/Library/Caches/sourcekit-lsp/generated"
        ]
      },
      "initialization_options": {
        "defaultWorkspaceType": "swiftPM",
        "backgroundIndexing": true,
        "backgroundPreparationMode": "enabled",
        "swiftPM": {
          "configuration": "debug",
          "scratchPath": "/Users/oscarvarto/Library/Caches/sourcekit-lsp/scratch"
        },
        "generatedFilesPath": "/Users/oscarvarto/Library/Caches/sourcekit-lsp/generated"
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["pyrefly", "!pyright", "!pylsp"]
    },
    "Java": {
      "format_on_save": "off"
    },
    "Nix": {
      "language_servers": ["nixd", "!nil"],
      "formatter": {
        "external": {
          "command": "alejandra",
          "arguments": ["--quiet", "--"]
        }
      }
    },
    "Swift": {
      "language_servers": ["sourcekit-lsp"]
    }
  }
}
